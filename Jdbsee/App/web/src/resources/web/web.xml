<web-app>

  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>

  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.AuthServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JdbcApiServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.jdbc.JdbcApiServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JdbcApiServlet</servlet-name>
    <url-pattern>/api/jdbc/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JdbcGui</servlet-name>
    <jsp-file>/jdbc.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>JdbcGui</servlet-name>
    <url-pattern>/jdbc</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ApiDocs</servlet-name>
    <jsp-file>/api-docs.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApiDocs</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <security-role>
    <role-name>manager-gui</role-name>
  </security-role>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected resources</web-resource-name>
      <url-pattern>/api/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>manager-gui</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/security/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/security/login.jsp</form-error-page>
    </form-login-config>
  </login-config>

</web-app>