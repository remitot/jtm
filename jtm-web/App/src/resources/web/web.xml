<web-app>

<!-- 
  <context-param>
    <param-name>org.jepria.tomcat.manager.web.managerApacheHref</param-name>
    <param-value>/manager-apache</param-value>
  </context-param>
-->
  
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.LoginServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/api/login/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.LogoutServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/api/logout/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JdbcApiServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.jdbc.JdbcApiServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>JdbcApiServlet</servlet-name>
    <url-pattern>/api/jdbc/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JdbcGui</servlet-name>
    <jsp-file>/gui/jdbc/jdbc.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>JdbcGui</servlet-name>
    <url-pattern>/jdbc</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>PortApiServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.port.PortApiServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PortApiServlet</servlet-name>
    <url-pattern>/api/port/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>PortGui</servlet-name>
    <jsp-file>/gui/port/port.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>PortGui</servlet-name>
    <url-pattern>/port</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>LogApiServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.log.LogApiServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogApiServlet</servlet-name>
    <url-pattern>/api/log/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LogGui</servlet-name>
    <jsp-file>/gui/log/log.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogGui</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>LogMonitorServlet</servlet-name>
    <servlet-class>org.jepria.tomcat.manager.web.logmonitor.LogMonitorServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogMonitorServlet</servlet-name>
    <url-pattern>/log-monitor</url-pattern>
  </servlet-mapping>
  

  <servlet>
    <servlet-name>ApiDocs</servlet-name>
    <jsp-file>/api-docs.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApiDocs</servlet-name>
    <url-pattern>/api</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected resources</web-resource-name>
      <url-pattern>/api/*</url-pattern>
      <url-pattern>/log-monitor</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>manager-gui</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Public resources</web-resource-name>
      <url-pattern>/api</url-pattern><!-- ApiDocs -->
      <url-pattern>/api/login/*</url-pattern>
      <url-pattern>/api/logout/*</url-pattern>
      <url-pattern>/api/port/http</url-pattern> <!-- for querying by Apache HTTPD manager -->
      <url-pattern>/api/port/ajp</url-pattern> <!-- for querying by Apache HTTPD manager -->
      <url-pattern>/gui/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/WEB-INF/security/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/security/login.jsp</form-error-page>
    </form-login-config>
  </login-config>
  
  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/error-401.jsp</location>
  </error-page>
</web-app>